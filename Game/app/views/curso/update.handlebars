<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="forms">Atualizar Curso</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form action="/curso/update/{{curso.id}}" method="post">
                    <fieldset>
                        <input type="hidden" name="_csrf" value="{{csrf}}" />

                        <div class="form-group">

                            <label class="col-form-label mt-4" for="sigla">Sigla</label>
                            <input type="text" class="form-control" placeholder="IE07" value="{{curso.sigla}}" id="sigla" name="sigla">
                            <small id="emailHelp" class="form-text text-muted">Em caso de duvida, verifique no site da
                                UFAM.</small>
                                <div class="invalid-feedback" id="invalid-feedback">{{printError errors 'sigla'}}</div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label mt-4" for="nome" >Nome</label>
                            <input type="text" class="form-control" placeholder="Fulano da silva" value="{{curso.nome}}" id="nome" name="nome">
                            <div class="invalid-feedback" id="invalid-feedback">{{printError errors 'nome'}}</div>
                        </div>
                        <div class="form-group">
                            <label for="exampleTextarea" class="form-label mt-4">Descrição do curso</label>
                            <textarea class="form-control" id="descricao" name="descricao" rows="3">{{curso.descricao}}</textarea>
                        </div>
                        <fieldset class="form-group">
                            <legend class="mt-4">Área de conhecimento</legend>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="area"
                                        id="area1" value="1" {{checked curso.areaId 1}}>
                                    Ciências Exatas - Computação, engenharias, matemática, estatistica, etc.
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="area"
                                        id="area2" value="2" {{checked curso.areaId 2}}>
                                    Ciências Humanas - Letras, psicologia, história, geografia, etc.
                                </label>
                            </div>
                            <div class="form-check disabled">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="area"
                                        id="area3" value="3" {{checked curso.areaId 3}}>
                                    Ciências Biológicas - medicina, odontologia, biologia, agrária, etc.
                                </label>
                            </div>
                        </fieldset>


                        <button type="submit" class="btn btn-primary">Atualizar Curso</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div> 
</div>   