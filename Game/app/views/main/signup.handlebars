<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms">Criação de Conta</h1>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="bs-component">
          <form action="/signup" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}" />
            <fieldset>
              <div class="form-group">
                <label class="col-form-label mt-4" for="nome">Nome Completo</label>
                <input type="text" class="form-control" placeholder="Nome de Usuário" id="nome" name="nome">
                <div class="invalid-feedback" id="invalid-feedback">{{printError errors 'nome'}}</div>
              </div>
              <div class="form-group">
                <label class="col-form-label mt-4" for="email">Endereço de email</label>
                <input type="text" class="form-control" placeholder="example@email.com" id="email" name="email">
                <div class="invalid-feedback" id="invalid-feedback">{{printError errors 'email'}}</div>
              </div>
              <div class="form-group"></div>
              <label class="col-form-label mt-4" for="cursoId">Selecione seu Curso</label>
              <select class="form-select" id="cursoId" name="cursoId">
                <option value="0">Escolha seu curso ...</option>
                {{#each cursos}}
                <option value="{{id}}">{{nome}}</option>
                {{/each}}
              </select>
        </div>
        <div class="form-group">
          <label class="col-form-label mt-4" for="senha">Crie sua senha</label>
          <input type="password" class="form-control" id="senha" name="senha">
        </div>
        <div class="d-grid gap-2 mt-4">
          <button type="submit" class="btn btn-lg btn-primary" type="button">Criar conta</button>
        </div>

        </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>


</div>